function[newDeck,newHand,handValue] = HitMe(deck,hand)
%double input,triple output
%creates a new hand with one more card,an updated deck,and the value of
%your new hand
[handValue]=CardValue(hand);
handVal=handValue;
while (handVal<=21)
    display(CardName(hand));
    hit=menu('Would you like to hit?','Yes','No');
    if (hit==1)
    [newDeck,newHand]=DrawACard(deck,hand);
    [handVal]=CardValue(newHand);
    handValue=handVal;
    else
        handVal=3456789;
    end;
end;
