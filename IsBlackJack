function [answer]=IsBlackJack(hand)
%single input, single output
%will output a 1 if it is a black jack
%only use this if aceValue=11

sum=0;
for ii=1:length(hand)
if (hand(ii)==11)|(hand(ii)==12)|(hand(ii)==13)
hand(ii)=10;
elseif (hand(ii)==1)
hand(ii)=aceValue;
end;
sum=sum+hand(ii);
end;

if (sum==1)
answer=1;
else
answer=0;
end;
