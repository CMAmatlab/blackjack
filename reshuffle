function[newDeck]=reshuffle(hand)
%single input, single output
%refreshes the deck minus the cards currently in people's hands

newDeck=[4,4,4,4,4,4,4,4,4,4,4,4,4]; %assign a new deck
for ii=1:length(hand) %loop throughout the hand
    for jj=1:length(hand)
        newDeck(hand(ii,jj))=newDeck(hand(ii,jj))-1; %remove cards from the new deck that are currently being used in hands
    end;
end;
