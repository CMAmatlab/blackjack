function [newDeck,newHand]=DrawACard(deck,hand)
%single input, double output
%Gives a new hand with one more card, plus the updated deck

ii=0;
while (ii==0)
newCard=randi([1 13]);

if (deck(newCard)~=0)
  deck(newCard)=deck(newCard)-1;
  ii=ii+1;
  else
  ii=ii;
end;
end;
newDeck=deck;
hand(length(hand)+1)=newCard;
newHand=hand;
